<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_test_choice"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_choice_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textColor="#292929"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_choice_question"
        android:layout_marginTop="10dp"
        android:minHeight="60dp">

        <ImageView
            android:id="@+id/img_speaker"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/listen" />

        <TextView
            android:id="@+id/txt_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img_speaker"
            android:text="Tieng nhat"
            android:textColor="#000000"
            android:textSize="25sp" />

    </RelativeLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="130dp">

        <RadioButton
            android:id="@+id/radio_first"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Lua chon 1"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radio_second"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Lua chon 1"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radio_third"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Lua chon 1"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radio_fourth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Lua chon 1"
            android:textColor="#000000" />
    </RadioGroup>

</RelativeLayout>
