<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:minHeight="260dp"
        >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/dialog_speaker"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/listen_focus" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sgdfgsdfgsfdgsdfgsdfgs"
            android:id="@+id/dialog_japanese"
            android:textColor="#000000"
            android:layout_toRightOf="@id/dialog_speaker"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_japanese"
            android:layout_alignLeft="@+id/dialog_japanese"
            android:layout_marginTop="3dp"
            android:id="@+id/dialog_pinyin"
            android:text="4234234234234234234"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap the mic to speak"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:layout_below="@id/dialog_japanese"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/dialog_result"/>

        <ImageView
            android:id="@+id/dialog_micButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/micro"
            android:background="@drawable/gray_ring"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="220dp"
            android:layout_height="13dp"
            android:layout_below="@+id/dialog_micButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_exit"
            android:text="Exit"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>